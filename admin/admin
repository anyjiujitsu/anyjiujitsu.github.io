<div class="card">
<h2>CSV Snippet</h2>
<pre id="snippet"></pre>
</div>

<script>
const CSV_COLUMNS = ["EVENT","FOR","WHERE","CITY","STATE","DAY","DATE","CREATED"];
const LS_KEY = "events_admin_token";

const $ = id => document.getElementById(id);

const fieldsDiv = $("fields");
CSV_COLUMNS.forEach(col => {
  const r = document.createElement("div");
  r.className = "row";
  r.innerHTML = `<label>${col}</label><input id="f_${col}">`;
  fieldsDiv.appendChild(r);
});

$("saveToken").onclick = () => {
  localStorage.setItem(LS_KEY, $("token").value.trim());
  setStatus("Token saved locally.");
};
$("clearToken").onclick = () => {
  localStorage.removeItem(LS_KEY);
  $("token").value = "";
  setStatus("Token cleared.");
};

const saved = localStorage.getItem(LS_KEY);
if (saved) $("token").value = saved;

function csvEscape(v) {
  if (!v) return "";
  v = v.replace(/\r\n/g,"\n").replace(/\r/g,"\n");
  if (/[",\n]/.test(v)) v = `"${v.replace(/"/g,'""')}"`;
  return v;
}

function buildRow() {
  return CSV_COLUMNS.map(c => csvEscape($("f_"+c).value.trim())).join(",");
}

$("preview").onclick = () => {
  $("previewOut").textContent = buildRow();
};

async function gh(url, opts={}) {
  const res = await fetch(url,{
    method: opts.method||"GET",
    headers: {
      "Accept":"application/vnd.github+json",
      ...(opts.token?{"Authorization":"Bearer "+opts.token}:{})
    },
    body: opts.body?JSON.stringify(opts.body):null
  });
  const t = await res.text();
  const j = t?JSON.parse(t):null;
  if (!res.ok) throw new Error(j?.message||t);
  return j;
}

function decode(b64) {
  return new TextDecoder().decode(Uint8Array.from(atob(b64.replace(/\n/g,"")),c=>c.charCodeAt(0)));
}
function encode(s) {
  return btoa(String.fromCharCode(...new TextEncoder().encode(s)));
}

async function loadCsv() {
  const url = `https://api.github.com/repos/${$("owner").value}/${$("repo").value}/contents/${$("path").value}?ref=${$("branch").value}`;
  const d = await gh(url,{token:$("token").value});
  const csv = decode(d.content);
  showSnippet(csv);
  return {csv,sha:d.sha};
}

$("loadCsv").onclick = async ()=>{
  try { await loadCsv(); setStatus("CSV loaded."); }
  catch(e){ setError(e.message); }
};

$("append").onclick = async ()=>{
  try {
    const {csv,sha} = await loadCsv();
    let updated = csv.endsWith("\n")?csv:csv+"\n";
    updated += buildRow()+"\n";

    const body = {
      message:`Append event ${new Date().toISOString()}`,
      content: encode(updated),
      sha,
      branch:$("branch").value
    };

    await gh(
      `https://api.github.com/repos/${$("owner").value}/${$("repo").value}/contents/${$("path").value}`,
      {method:"PUT",token:$("token").value,body}
    );

    setStatus("Commit successful.");
    await loadCsv();
  } catch(e){ setError(e.message); }
};

function showSnippet(csv){
  const l = csv.split("\n");
  $("snippet").textContent =
    "--- TOP ---\n"+l.slice(0,5).join("\n")+
    "\n\n--- BOTTOM ---\n"+l.slice(-8).join("\n");
}

function setStatus(m){ $("status").textContent=m; $("error").textContent=""; }
function setError(m){ $("error").textContent=m; $("status").textContent=""; }
</script>

</body>
</html>
